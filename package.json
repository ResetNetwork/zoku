{
  "name": "the-great-game",
  "version": "1.0.0",
  "scripts": {
    "dev": "wrangler dev",
    "dev:frontend": "cd frontend && npm run dev",
    "deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 execute the-great-game --file=./schema.sql",
    "db:migrate:remote": "wrangler d1 execute the-great-game --file=./schema.sql --remote",
    "db:seed": "wrangler d1 execute the-great-game --file=./seed.sql",
    "db:seed:remote": "wrangler d1 execute the-great-game --file=./seed.sql --remote",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.1.0",
    "@hono/mcp": "^0.2.2",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "arctic": "^3.7.0",
    "hono": "^4.6.14",
    "jose": "^6.1.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.7.2",
    "wrangler": "^4.53.0"
  }
}
